// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Message {
  id       Int      @default(autoincrement()) @id
  sender   Rooms    @relation("senderMsg",fields: [senderId], references: [id])
  receiver Rooms    @relation("receiverMsg", fields: [receiverId], references: [id])
  message  String
  time     DateTime
  senderId Int
  receiverId Int
}

model Rooms {
  id    Int     @default(autoincrement()) @id
  room String  @unique
  sender       Message[] @relation("senderMsg")
  receiver     Message[] @relation("receiverMsg")
}